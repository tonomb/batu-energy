{
  "name": "api",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsup --watch --onSuccess \"node dist/index.cjs\"",
    "build": "tsup",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "test": "jest --detectOpenHandles",
    "test:watch": "dotenv -e ../../.env -- jest --watch",
    "build:lambda": "esbuild src/lambdas/lambda.ts --bundle --platform=node --target=node18 --outfile=dist/lambda.js",
    "package:lambda": "cd dist && zip -r optimize-function.zip lambda.js"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@repo/logger": "*",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "mathjs": "^14.2.1",
    "morgan": "^1.10.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/aws-lambda": "^8.10.147",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.12.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.20.0",
    "jest": "^29.7.0",
    "nock": "^14.0.1",
    "supertest": "^7.0.0",
    "tsup": "^8.3.6",
    "typescript": "5.7.3",
    "esbuild": "^0.20.1"
  }
}
